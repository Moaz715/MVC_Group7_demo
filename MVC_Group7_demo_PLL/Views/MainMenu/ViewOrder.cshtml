@using Microsoft.AspNetCore.Mvc.Localization
@model MVC_Group7_demo_BLL.ModelVM.OrdersDTO
@{
    ViewData["Title"] = "My Current Order";
    Layout = "~/Views/Shared/newLayout.cshtml";
}
<h2 class="mb-4">@SharedLocalizer["Order.Current.Title"]</h2>
@if (Model == null)
{
    <div class="alert alert-warning">
        @SharedLocalizer["Order.NoActiveOrder"]
    </div>
    <a asp-action="Index" asp-controller="Products" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> @SharedLocalizer["Order.BackButton"]
    </a>
}
else
{
    <div class="mb-3">
        <strong>@SharedLocalizer["Order.TotalPriceLabel"]</strong> $@Model.TotalPrice.ToString("F2") <br />
        <strong>@SharedLocalizer["Order.ItemCountLabel"]</strong> @Model.NumOfItems
    </div>
    <table class="table table-bordered table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>@SharedLocalizer["Order.ProductColumn"]</th>
                <th>@SharedLocalizer["Order.ImageColumn"]</th>
                <th>@SharedLocalizer["Order.QuantityColumn"]</th>
                <th>@SharedLocalizer["Order.UnitPriceColumn"]</th>
                <th>@SharedLocalizer["Order.SubtotalColumn"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var po in Model.ProductOrders)
            {
                <tr>
                    <td>@po.ProductName</td>
                    <td>
                        @if (!string.IsNullOrEmpty(po.ProductImage))
                        {
                            <img src="@po.ProductImage" alt="@po.ProductName" style="height:60px; object-fit:cover;" />
                        }
                        else
                        {
                            <img src="https://dummyimage.com/60x60/dee2e6/6c757d.jpg" alt="@po.ProductName" />
                        }
                    </td>
                    <td>@po.Quantity</td>
                    <td>$@po.UnitPrice.ToString("F2")</td>
                    <td>$@(po.UnitPrice* po.Quantity)</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="d-flex gap-2 mt-3">
        <a asp-action="Index" asp-controller="Products" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> @SharedLocalizer["Order.BackButton"]
        </a>
        <a asp-action="Delete" asp-controller="Order" asp-route-id="@Model.OrderId"
           class="btn btn-danger"
           onclick="return confirm('@SharedLocalizer["Order.DeleteConfirm"]');">
            <i class="bi bi-trash"></i> @SharedLocalizer["Order.DeleteButton"]
        </a>
        <a asp-action="EditOrder" asp-controller="Order" class="btn btn-primary">
            <i class="bi bi-pencil"></i> @SharedLocalizer["Order.EditButton"]
        </a>
        <a asp-action="ChoosePayment" asp-controller="Order" asp-route-id="@Model.OrderId"
           class="btn btn-success">
            <i class="bi bi-credit-card"></i> @SharedLocalizer["Order.CheckoutButton"]
        </a>
    </div>
}