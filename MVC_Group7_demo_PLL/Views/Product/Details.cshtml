@model MVC_Group7_demo_BLL.ModelVM.ReadProductDto

@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Views/Shared/newLayout.cshtml";
}

<h2 class="mb-4">@Model.Name</h2>

<div class="card shadow-sm">
    <div class="card-body">
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <img src="@Model.Image" alt="@Model.Name" class="img-fluid mb-3" style="max-height: 300px; object-fit: contain;" />
        }
        else
        {
            <img src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="@Model.Name" class="img-fluid mb-3" style="max-height: 300px; object-fit: contain;" />
        }
        <p class="card-text"><strong>Price:</strong> $@Model.Price.ToString("F2")</p>
        <p class="card-text"><strong>Stock:</strong> @Model.Stock</p>
        <p class="card-text"><strong>Description:</strong> @Model.Description</p>
    </div>
</div>

<a asp-action="GetAll" class="btn btn-secondary mt-3">Back to Products</a>