@using Microsoft.AspNetCore.Mvc.Localization
@model List<MVC_Group7_demo_BLL.ModelVM.ReadProductDto>
@{
    ViewData["Title"] = ViewBag.Title ?? "All Products";
    Layout = "~/Views/Shared/newLayout.cshtml";
}
<h2 class="text-center mb-4">@ViewData["Title"]</h2>
<div class="mb-3">
    <h5 class="mb-2">@SharedLocalizer["Product.FilterLabel"]</h5>
    <ul class="list-inline">
        <li class="list-inline-item"><a asp-action="GetAll" class="btn btn-outline-secondary btn-sm @(ViewData["Title"].ToString() == "All Products" ? "active" : "")">@SharedLocalizer["Product.AllFilter"]</a></li>
        <li class="list-inline-item"><a asp-action="ByCategory" asp-route-categoryId="2" class="btn btn-outline-secondary btn-sm @(ViewData["Title"].ToString() == "Fruits Products" ? "active" : "")">@SharedLocalizer["Product.FruitsFilter"]</a></li>
        <li class="list-inline-item"><a asp-action="ByCategory" asp-route-categoryId="3" class="btn btn-outline-secondary btn-sm @(ViewData["Title"].ToString() == "Vegetables Products" ? "active" : "")">@SharedLocalizer["Product.VegetablesFilter"]</a></li>
    </ul>
</div>
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger mb-4">@ViewBag.ErrorMessage</div>
}
@if (!Model.Any())
{
    <p class="text-center">@SharedLocalizer["Product.NoProducts"]</p>
}
else
{
    <div class="row gx-4 gx-lg-5 row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 justify-content-center">
        @foreach (var product in Model)
        {
            <div class="col mb-5">
                <div class="card h-100 shadow-sm border-0">
                    @if (!string.IsNullOrEmpty(product.Image))
                    {
                        <img class="card-img-top" src="@product.Image" alt="@product.Name" style="height: 200px; object-fit: cover;" />
                    }
                    else
                    {
                        <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="@product.Name" style="height: 200px; object-fit: cover;" />
                    }
                    <div class="card-body p-3">
                        <h5 class="card-title fw-bolder text-center">@product.Name</h5>
                        <p class="card-text text-center text-success">$@product.Price.ToString("F2")</p>
                        <p class="card-text text-center text-muted">@SharedLocalizer["Product.StockLabel"] @product.Stock</p>
                    </div>
                    <div class="card-footer p-3 pt-0 border-top-0 bg-transparent">
                        <div class="text-center">
                            <a class="btn btn-outline-primary btn-sm" asp-action="Details" asp-route-id="@product.ProductId">@SharedLocalizer["Product.DetailsButton"]</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}