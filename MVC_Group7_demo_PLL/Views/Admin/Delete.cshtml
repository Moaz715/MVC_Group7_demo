@model MVC_Group7_demo_BLL.ModelVM.AdminDTO

@{
    ViewData["Title"] = "Delete Admin";
}

<h2>Delete Admin</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<div class="alert alert-warning">
    <h5>Warning!</h5>
    <p>Are you sure you want to delete this admin? This action cannot be undone.</p>
</div>

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">User ID</dt>
            <dd class="col-sm-8">@Model.UserId</dd>

            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Created On</dt>
            <dd class="col-sm-8">@Model.CreatedOn.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-4">Created By</dt>
            <dd class="col-sm-8">@Model.CreatedBy</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="UserId" />
    
    <div class="mb-3">
        <label class="form-label">Reason for Deletion (Optional)</label>
        <textarea class="form-control" rows="3" 
                  placeholder="Please provide a reason for deleting this admin..."></textarea>
    </div>

    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form> 