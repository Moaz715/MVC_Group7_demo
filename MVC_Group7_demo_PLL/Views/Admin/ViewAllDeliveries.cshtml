@model List<MVC_Group7_demo_BLL.ModelVM.DeliveryReadDTO>

@{
    ViewData["Title"] = "All System Deliveries";
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card shadow-sm">
    <div class="card-header">
        <i class="fas fa-truck"></i> Delivery Records
    </div>
    <div class="card-body">
        <table class="table table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Destination</th>
                    <th>Estimated Time</th>
                    <th>Created By</th>
                    <th>Last Modified By</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var delivery in Model)
                    {
                        <tr>
                            <td>@delivery.DeliveryId</td>
                            <td>@delivery.Name</td>
                            <td><span class="badge bg-info text-dark">@delivery.Status</span></td>
                            <td>@delivery.Destination</td>
                            <td>@delivery.EstimatedTime.ToString("yyyy-MM-dd hh:mm tt")</td>
                            <td>@delivery.CreatedBy</td>
                            <td>@(delivery.ModifiedBy ?? "N/A")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center py-4">No deliveries found in the system.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>