@using Microsoft.AspNetCore.Mvc.Localization
@model MVC_Group7_demo_BLL.ModelVM.ReadCategoryDto
@{
    ViewData["Title"] = "Category Details";
    Layout = "~/Views/Shared/newLayout.cshtml";
}
<h2 class="mb-4">@SharedLocalizer["Category.Details.Title"]</h2>
<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <strong>@SharedLocalizer["Category.ProductsLabel"]</strong>
        @if (Model.Products != null && Model.Products.Any())
        {
            <ul class="list-group list-group-flush mt-3">
                @foreach (var product in Model.Products)
                {
                    <li class="list-group-item">@product</li>
                }
            </ul>
        }
        else
        {
            <p class="mt-3">@SharedLocalizer["Category.NoProducts"]</p>
        }
    </div>
</div>
<a asp-action="GetAll" class="btn btn-secondary mt-3">@SharedLocalizer["Category.BackButton"]</a>
@if (User.IsInRole("Admin"))
{
    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning mt-3">@SharedLocalizer["Category.EditButton"]</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger mt-3">@SharedLocalizer["Category.DeleteButton"]</a>
}