@model MVC_Group7_demo_BLL.ModelVM.ReadCategoryDto

@{
    ViewData["Title"] = "Category Details";
    Layout = "~/Views/Shared/newLayout.cshtml";
}

<h2 class="mb-4">Category Details</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <strong>Products:</strong>
        @if (Model.Products != null && Model.Products.Any())
        {
            <ul class="list-group list-group-flush mt-3">
                @foreach (var product in Model.Products)
                {
                    <li class="list-group-item">@product</li>
                }
            </ul>
        }
        else
        {
            <p class="mt-3">No products in this category.</p>
        }
    </div>
</div>

<a asp-action="GetAll" class="btn btn-secondary mt-3">Back to List</a>
@if (User.IsInRole("Admin"))
{
    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning mt-3">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger mt-3">Delete</a>
}