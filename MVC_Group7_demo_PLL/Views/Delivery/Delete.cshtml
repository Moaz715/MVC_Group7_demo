@model MVC_Group7_demo_BLL.ModelVM.DeliveryReadDTO

@{
    ViewData["Title"] = "Delete Delivery";
}

<div class="container mt-4">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3><i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion</h3>
        </div>
        <div class="card-body">
            <h5 class="card-title">Are you sure you want to permanently delete this delivery record?</h5>
            <p>This action cannot be undone.</p>
            <hr />

            <h4>Delivery Details</h4>
            <dl class="row">
                <dt class="col-sm-3">Delivery ID</dt>
                <dd class="col-sm-9">@Model.DeliveryId</dd>

                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">Destination</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Destination)</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="DeliveryId" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-2"></i>Yes, Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-2"></i>Cancel
                </a>
            </form>
        </div>
    </div>
</div>