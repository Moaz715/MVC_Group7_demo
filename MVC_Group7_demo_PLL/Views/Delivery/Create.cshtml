@model MVC_Group7_demo_BLL.ModelVM.DeliveryCreateDTO

@{
    ViewData["Title"] = "Create New Delivery";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., John Doe's Package" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Phone" class="control-label"></label>
                            <input asp-for="Phone" class="form-control" placeholder="e.g., 555-123-4567" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Status" class="control-label"></label>
                            <input asp-for="Status" class="form-control" value="Pending" readonly />
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Destination" class="control-label"></label>
                            <input asp-for="Destination" class="form-control" placeholder="e.g., 123 Main St, Anytown" />
                            <span asp-validation-for="Destination" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="EstimatedTime" class="control-label">Estimated Arrival Time</label>
                            <input asp-for="EstimatedTime" class="form-control" type="datetime-local" />
                            <span asp-validation-for="EstimatedTime" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-4">
                            <input type="submit" value="Create" class="btn btn-success" />
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}