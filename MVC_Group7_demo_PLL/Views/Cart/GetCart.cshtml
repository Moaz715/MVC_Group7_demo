@model MVC_Group7_demo_BLL.ModelVM.CartDTO

@{
    ViewData["Title"] = "My Cart";
    Layout = "~/Views/Shared/newLayout.cshtml";
}

<h2 class="mb-4">My Cart</h2>

@if (Model == null || Model.ProductCart == null || !Model.ProductCart.Any())
{
    <div class="alert alert-warning">
        Your cart is currently empty.
    </div>
    <a asp-action="GetAll" asp-controller="Product" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back
    </a>
}
else
{
    <div class="mb-3">
        <strong>Number of Items:</strong> @Model.numOfItems
    </div>

    <table class="table table-bordered table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>Product</th>
                <th>Image</th>
                <th>Unit Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ProductCart)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ProductImage))
                        {
                            <img src="@item.ProductImage" alt="@item.ProductName" style="height:60px; object-fit:cover;" />
                        }
                        else
                        {
                            <img src="https://dummyimage.com/60x60/dee2e6/6c757d.jpg" alt="@item.ProductName" />
                        }
                    </td>
                    
                    <td>$@item.UnitPrice.ToString("F2")</td>
                    
                    <td>
                        <a asp-action="RemoveFromCart" asp-controller="Cart" asp-route-id="@item.ProductCartId"
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to remove this item from your cart?');">
                            <i class="bi bi-trash"></i> Remove
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex gap-2 mt-3">
        <a asp-action="GetAll" asp-controller="Product" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>
}
