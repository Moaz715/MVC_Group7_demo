@using Microsoft.AspNetCore.Mvc.Localization

@{
    ViewData["Title"] = "Choose Payment Method";
    Layout = "~/Views/Shared/newLayout.cshtml";
}
<div class="container mt-5 text-center">
    <h2 class="mb-4">@SharedLocalizer["Payment.ChooseTitle"]</h2>
    <p class="text-muted">@SharedLocalizer["Payment.ChooseDescription"]</p>
    <div class="d-flex justify-content-center gap-3 mt-4">
        <a asp-action="CardPayment" asp-controller="Order" asp-route-paymentMethod="Credit Card" class="btn btn-primary btn-lg px-4">
            <i class="bi bi-credit-card"></i> @SharedLocalizer["Payment.CardButton"]
        </a>
        <a asp-action="FinalizeOrder" asp-controller="Order" asp-route-paymentMethod="Cash" class="btn btn-success btn-lg px-4">
            <i class="bi bi-cash"></i> @SharedLocalizer["Payment.CashButton"]
        </a>
    </div>
</div>