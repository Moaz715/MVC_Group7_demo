@using Microsoft.AspNetCore.Mvc.Localization
@model List<MVC_Group7_demo_BLL.ModelVM.FinalizedOrder>
@{
    Layout = "~/Views/Shared/newLayout.cshtml";
}
<h2>@SharedLocalizer["Order.Finalized.Title"]</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>@SharedLocalizer["Order.TotalPriceColumn"]</th>
            <th>@SharedLocalizer["Order.ItemCountColumn"]</th>
            <th>@SharedLocalizer["Order.LocationColumn"]</th>
            <th>@SharedLocalizer["Order.DeliveryNameColumn"]</th>
            <th>@SharedLocalizer["Order.FinalizedOnColumn"]</th>
            <th>@SharedLocalizer["Order.PaymentMethodColumn"]</th>
            <th>@SharedLocalizer["Order.ActionsColumn"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.TotalPrice.ToString("C")</td>
                <td>@order.NumOfItems</td>
                <td>@order.CustomerLocation</td>
                <td>@order.DeliveryName</td>
                <td>@order.FinalizedOn.ToString()</td>
                <td>@order.PaymentMethod</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-info btn-sm">@SharedLocalizer["Order.ViewButton"]</a>
                    <form asp-action="Cancel" asp-route-id="@order.OrderId" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">@SharedLocalizer["Order.CancelButton"]</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>